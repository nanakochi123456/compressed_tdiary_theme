div.list p.link {
	text-align: left;
	background-color: #ccc;
}

div.list span.title {
        display: block;
}

div.list span.comment {
        display: block;
	margin-left: 0.5em;
}

div.list span.date {
	display: block;
	font-size: 90%;
	margin-left: auto;
	text-align: right;
}

/* footnote */
div.body span.footnote {
	vertical-align: super;
	font-size: 70%;
}

div.footnote {
	font-size: 90%;
	border-style: solid;
	border-color: #ddf;
	border-width: 1px 0px 0px 0px;
	padding: 0em;
	margin-left: 6em;
}

p.footnote {
	margin: 0em 0.5em;
	padding: 0em;
}
