/*==  大枠のレイアウト == */

body{
 margin:0px;
 padding:0px;
 text-align:center;
 width:auto;
 background:#E2EDEE url(body.jpg) top center no-repeat;
}

table{
width:760px;
margin:auto;
}

h1{
font-size:140%;
width:750px;
margin:0px auto;
padding:50px 0px;
text-indent:20px;
text-align:left;
color:#FFFFFF;
