text-align:right;
font-size:90%;
margin:10px auto;
width:800px;
}

span.adminmenu a{
padding-left:10px;
padding-right:7px;
color:#65B01B;
border-left:1px solid #999;
}

span.adminmenu a:visited{
color:#65B01B;
}

span.adminmenu a:hover{
color:#EF0779;
}

.hatena-rss{
}

