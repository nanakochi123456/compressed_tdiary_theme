/*== 記事内の細かい部分 == */
div.section pre{
 padding:5px;
 border:1px solid #511206;
 background:#FFFFFF;
}

div.section blockquote{
 padding:5px;
 border:1px solid #511206;
 background:#F2E7DC;
}

div.section ul li{
}

div.day img.photo{
 float:right;
 margin:5px;
}



/*== 以下はてなモジュールの細かい部分 ==*/
ul.hatena-photo li {
 margin:3px;
 background:#FFFFFF;
 padding:1px;
 margin:0px;
}

img.hatena-fotolife {
}

.hatena-searchform {
 margin:5px;
 padding:0px;
}

div.adminmenu{
text-align:right;
font-size:90%;
margin:3px 0px 3px 0px;
}

span.adminmenu a{
padding-left:10px;
padding-right:7px;
border-left:1px solid #CCCCCC;
}

.hatena-rss{
